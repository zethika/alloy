{
    "name": "@zethika/alloy",
    "version": "1.0.4",
    "description": "An event bus capable of having both regular event listeners, event payload mutators and delayed execution",
    "main": "dist/cjs/index.js",
    "module": "dist/mjs/index.js",
    "types": "dist/types/index.d.ts",
    "scripts": {
        "test": "jest --passWithNoTests  --config jestconfig.json",
        "build": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup",
        "prepare": "npm run build",
        "prepublishOnly": "npm test",
        "version": "git add -A src",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "alloy",
        "events",
        "event listener",
        "event mutation",
        "event filtering",
        "context"
    ],
    "author": "Kenneth Berg",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.3",
        "@types/qs": "^6.9.8",
        "jest": "^29.6.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {},
    "files": [
        "dist"
    ],
    "directories": {
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:zethika/alloy.git"
    },
    "homepage": "https://github.com/zethika/alloy#readme"
}
